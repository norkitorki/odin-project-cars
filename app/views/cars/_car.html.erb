<div id="<%= dom_id car %>">
  <p>
    <strong>Maker:</strong>
    <%= car.maker %>
  </p>

  <p>
    <strong>Model:</strong>
    <%= car.model %>
  </p>

  <p>
    <strong>Year:</strong>
    <%= car.year %>
  </p>

  <% if car.variants.any? %>
    <p>
      <strong>Variants:</strong>
      <%= car.variants.map(&:value).join(', ') %>
    </p>
  <% end %>

</div>
